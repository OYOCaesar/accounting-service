      <foreach collection="statusList" index="index" item="item"
               separator="," open="(" close=")">
        #{item}
      </foreach>
    </if>
  </select>

  <update id="updateByConditions" parameterType="java.util.Map">
    update coupons
    <set>
      <if test="targetStatus != null">
        status = #{targetStatus,jdbcType=INTEGER},
      </if>
      <if test="lastUpdateTime != null">
        last_update_time = #{lastUpdateTime,jdbcType=TIMESTAMP},
      </if>
    </set>
    where 1=1
    <if test="idList != null">
      AND id in
      <foreach collection="idList" index="index" item="item"
               separator="," open="(" close=")">
        #{item}
      </foreach>
    </if>
    <if test="metadataIdList != null">
      AND metadata_id in
      <foreach collection="metadataIdList" index="index" item="item"
               separator="," open="(" close=")">
        #{item}
      </foreach>
    </if>
    <if test="statusList != null">
      AND status in
      <foreach collection="statusList" index="index" item="item"
               separator="," open="(" close=")">
        #{item}
      </foreach>
    </if>
  </update>




  <update id="updateByPrimaryKeySelective" parameterType="com.oyo.accouting.bean.Coupons">
