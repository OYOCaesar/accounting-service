<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oyo.accouting.mapper.accounting.AccountingOyoShareMapper">

    <resultMap id="BaseResultMap" type="com.oyo.accouting.bean.OyoShareDto" >
        <id column="id" property="id" />
        <result column="hotel_id" property="hotelId" />
        <result column="status" property="status"/>
        <result column="unique_code" property="uniqueCode"/>
        <result column="oyo_id" property="oyoId"/>
        <result column="hotel_name" property="hotelName"/>
        <result column="city" property="city"/>
        <result column="zone_name" property="zoneName"/>
        <result column="fixed_rate" property="fixedRate"/>
        <result column="oyo_share" property="oyoShare" />
    </resultMap>

    <select id="queryOyoShareList" resultMap="BaseResultMap" parameterType="com.oyo.accouting.bean.OyoShareDto">

        SELECT * FROM oyo_share where 1 = 1
        <if test="oyoShare.hotelId != null and oyoShare.hotelId != ''">
            and hotel_id = #{oyoShare.hotelId}
        </if>
        <if test="oyoShare.oyoId != null and oyoShare.oyoId != ''">
        and oyo_id = #{oyoShare.oyoId}
        </if>
        <if test="oyoShare.hotelName != null and oyoShare.hotelName != ''">
            and hotel_name = #{oyoShare.hotelName}
        </if>
        <if test="oyoShare.status != null and oyoShare.status != ''">
            and status = #{oyoShare.status}
        </if>
    </select>

    <!-- 批量插入 -->
    <insert id ="insertOyoShareList" parameterType="java.util.List" >
        insert into oyo_share
        (hotel_id, oyo_share, status, unique_code,oyo_id,hotel_name,city,zone_name,fixed_rate)
        values
        <foreach collection ="oyoShareList" item="oyoShare" index= "index" separator =",">
            (
            #{oyoShare.hotelId}, #{oyoShare.oyoShare},
            #{oyoShare.status},#{oyoShare.uniqueCode},
            #{oyoShare.oyoId}, #{oyoShare.hotelName},
            #{oyoShare.city},#{oyoShare.zoneName},
            #{oyoShare.fixedRate}
            )
        </foreach >
    </insert >
	
</mapper>